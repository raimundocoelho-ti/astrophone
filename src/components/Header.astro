---
import { SITE_TITLE } from '../consts';
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
	<div class="max-w-7xl mx-auto px-4">
		<nav class="flex justify-between items-center py-4">
			<a href="/" class="text-2xl font-black text-white hover:text-cyan-300 transition-colors">
				{SITE_TITLE}
			</a>
			<div class="hidden md:flex items-center space-x-6 text-lg">
				<a href="#servicos" class="hover:text-cyan-400 transition-colors">Serviços</a>
				<a href="#como-funciona" class="hover:text-cyan-400 transition-colors">Como Funciona</a>
				<a href="#faq" class="hover:text-cyan-400 transition-colors">FAQ</a>
			</div>
			<a href="#contato" class="hidden md:inline-block bg-cyan-400 text-black font-bold py-2 px-6 rounded-full hover:bg-cyan-300 transition-transform transform hover:scale-105">
				Contato
			</a>
		</nav>
	</div>
</header>

<script>
	// Adiciona um fundo ao header quando o usuário rolar a página
	document.addEventListener('scroll', () => {
		const header = document.getElementById('main-header');
		if (window.scrollY > 20) {
			header.classList.add('bg-slate-900/80', 'backdrop-blur-sm', 'shadow-lg');
		} else {
			header.classList.remove('bg-slate-900/80', 'backdrop-blur-sm', 'shadow-lg');
		}
	});
</script>